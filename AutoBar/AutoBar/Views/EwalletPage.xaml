<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoBar.Views.EwalletPage"
             xmlns:viewmodels="clr-namespace:AutoBar.ViewModels" 
             x:DataType="viewmodels:EwalletViewModel">
    <ContentPage.Content>
        <StackLayout Padding="10,0" HorizontalOptions="Center">
            <Frame Padding="0,20,0,0" HorizontalOptions="Center" CornerRadius="200" HeightRequest="200" WidthRequest="200" 
                   HasShadow="False" IsClippedToBounds="True" BackgroundColor="Transparent">
                <Image Source="{Binding ImageLink}" Aspect="AspectFit"/>
            </Frame>
            <Label Text="{Binding Balance, StringFormat='PHP {0:#.00}'}" HorizontalTextAlignment="Center" FontSize="20"/>
            <Label Text="Available Balance" HorizontalTextAlignment="Center" FontSize="12" Margin="0,0,0,20"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>